{
  "name": "docs",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "./docs/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docusaurus build --config docusaurus.config.ts --out-dir ../dist/docs",
        "cwd": "docs"
      },
      "dependsOn": ["lint"]
    },
    "write-translations": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docusaurus write-translations --config docusaurus.config.ts --locale ko",
          "docusaurus write-translations --config docusaurus.config.ts --locale ja"
        ],
        "cwd": "docs"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docusaurus start --port 3000 --config docusaurus.config.ts",
        "cwd": "docs"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "configurations": {
        "dev": {
          "fix": true
        }
      }
    }
  },
  "tags": []
}
